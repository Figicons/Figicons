{
    "compilerOptions": {
      "module": "esnext",
      "target": "es6",
      "lib": ["es2015", "es2017", "dom"],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true
    },
    "exclude": [
      "node_modules"
    ]
  }
  